# LiveKit Cloud Configuration
# Get these from your LiveKit Cloud dashboard or use 'lk cloud auth' and 'lk app env'
LIVEKIT_URL=wss://your-project-id.livekit.cloud
LIVEKIT_API_KEY=APIxxxxxxxxxxxxxxx
LIVEKIT_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Agent Configuration
# This should match the agent name in your LiveKit Cloud deployment
AGENT_NAME=pd-voice-trialist-2-agent

# Analytics (Optional)
# Amplitude API key for tracking user interactions
NEXT_PUBLIC_AMPLITUDE_KEY=your-amplitude-project-key

# Application Settings
# Public URL of your deployed application
NEXT_PUBLIC_APP_URL=https://voice.pandadoc.com

# Session Configuration
# Maximum session duration in minutes
SESSION_MAX_DURATION_MINUTES=30
# Session timeout warning in minutes
SESSION_WARNING_MINUTES=5

# Development Settings
# Set to 'true' to enable debug logging
DEBUG_MODE=false
# Set to 'true' to use mock agent (no real connection)
MOCK_MODE=false

# Security Settings
# Used for encrypting session data
SESSION_SECRET=generate-a-random-32-character-string-here

# Rate Limiting (Optional)
# Max requests per IP per minute
RATE_LIMIT_PER_MINUTE=10

# Error Reporting (Optional)
# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Feature Flags (Optional)
# Enable/disable features without code changes
FEATURE_TRANSCRIPT_DISPLAY=false
FEATURE_SCREEN_SHARE=false
FEATURE_FILE_UPLOAD=false
FEATURE_CHAT_INPUT=false

# Monitoring (Optional)
# Datadog APM configuration
DD_SERVICE=pandadoc-voice-ui
DD_ENV=production
DD_VERSION=1.0.0